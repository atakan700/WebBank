@model WebBank.Models.ViewModels.GirisViewModel

<form asp-action="Giris" method="post">
    <div>
        <label>TC Kimlik</label>
        <input asp-for="TcNo" />
    </div>
    <div>
        <label>Parola</label>
        <input asp-for="Parola" type="password" />
    </div>
    <button type="submit">Giriş Yap</button>
</form>

@if (ViewBag.Hata != null)
{
    <p style="color:red;">@ViewBag.Hata</p>
}
