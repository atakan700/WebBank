@model WebBank.Models.ViewModels.KisiHesapViewModel

<form asp-action="Ekle" method="post">
    <div class="form-group">
        <label asp-for="Kisiler.Ad" class="control-label">Ad</label>
        <input asp-for="Kisiler.Ad" class="form-control" />
        <span asp-validation-for="Kisiler.Ad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Kisiler.Soyad" class="control-label">Soyad</label>
        <input asp-for="Kisiler.Soyad" class="form-control" />
        <span asp-validation-for="Kisiler.Soyad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Kisiler.InternetBank" class="control-label">Internet Bankacılığı</label>
        <input asp-for="Kisiler.InternetBank" type="checkbox" class="form-check-input" />
        <span asp-validation-for="Kisiler.InternetBank" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Kisiler.Parola" class="form-label">Parola</label>
        <input asp-for="Kisiler.Parola" type="password" class="form-control" />
        <span asp-validation-for="Kisiler.Parola" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SubeId">Şube Seçiniz</label>
        <select asp-for="SubeId" asp-items="@(new SelectList(ViewBag.Subeler, "Id", "Ad"))" class="form-control">
            <option value="">-- Şube Seçiniz --</option>
        </select>
        <span asp-validation-for="SubeId" class="text-danger"></span>
    </div>
    <!-- Hesap Türü -->
    <div class="form-group">
        <label asp-for="Hesap.HesapTuru" class="control-label">Hesap Türü</label>
        <select asp-for="Hesap.HesapTuru" class="form-control">
            <option value="TL">TL</option>
            <option value="USD">USD</option>
            <option value="EUR">EUR</option>
        </select>
        <span asp-validation-for="Hesap.HesapTuru" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Hesap.Bakiye" class="control-label">Bakiye</label>
        <input asp-for="Hesap.Bakiye" class="form-control" />
        <span asp-validation-for="Hesap.Bakiye" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
