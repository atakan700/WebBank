@model IEnumerable<WebBank.Models.Kisiler>
@using WebBank.Models

<h2>Kişi Listesi</h2>

<table border="1">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Aktif</th>
            <th>Şube</th>
            <th>Hesap Türü</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kisi in Model)
        {
            @foreach (var hesap in kisi.Hesaplar) 
            {
                <tr>
                    <td>@kisi.Ad</td>
                    <td>@kisi.Soyad</td>
                    <td>@(kisi.InternetBank ? "Evet" : "Hayır")</td>
                    <td>@kisi.subeBilgisi</td>
                    <td>@hesap.HesapTuru</td>  <!-- Hesap türünü göster -->
                </tr>
            }
        }
    </tbody>
</table>
