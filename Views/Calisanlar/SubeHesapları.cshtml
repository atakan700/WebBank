@model WebBank.Models.ViewModels.SubeHesaplariViewModel
<meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
<meta http-equiv="Pragma" content="no-cache" />
<meta http-equiv="Expires" content="0" />

<div class="row">
    <!-- Kullanıcı Bilgileri -->
    <div class="col-12 mb-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="card-title text-primary">
                    <i class="fas fa-user-circle me-2"></i>
                    Merhaba, @Model.Calisan.Ad @Model.Calisan.Soyad
                </h4>
            </div>
        </div>
    </div>

    <!-- İşlemler Bölümü -->
    <div class="col-md-6 mb-4">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-exchange-alt me-2"></i>
                    İşlemler
                </h5>
            </div>
            <div class="card-body">
                <div class="list-group">
                    <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-money-bill-transfer me-2"></i>EFT</span>
                        <i class="fas fa-chevron-right"></i>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-money-bill-wave me-2"></i>HAVALE</span>
                        <i class="fas fa-chevron-right"></i>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-money-bill-trend-up me-2"></i>PARA YATIRMA</span>
                        <i class="fas fa-chevron-right"></i>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-money-bill-trend-down me-2"></i>PARA ÇEKME</span>
                        <i class="fas fa-chevron-right"></i>
                    </a>
                    <a asp-controller="Hesap" asp-action="HesapEkle" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-money-bill-trend-down me-2"></i>HESAP AÇ</span>
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

<h2>@ViewBag.SubeAd Şubesindeki Hesaplar</h2>

<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>IBAN</th>
            <th>HesapTuru</th>
            <th>Bakiye</th>
        </tr>
    </thead>
    <tbody>
            @foreach (var hesap in Model.Hesaplar)
            {
                <tr>
                    <td>@hesap.Musteri.Ad</td>
                    <td>@hesap.Musteri.Soyad</td>
                    <td>@hesap.IBAN</td>
                    <td>@hesap.HesapTuru</td>
                    <td>@hesap.Bakiye.ToString("C")</td>
                </tr>
            }
    </tbody>
</table>
<form asp-controller="Calisanlar" asp-action="GiseCikis" method="post">
    <button type="submit" class="btn btn-danger">Çıkış Yap</button>
</form>

<script>
    window.onpageshow = function(event) {
        if (event.persisted) {
            location.reload();
        }
    };
</script>